<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:background="@color/gray"
    tools:context=".Guide"
    android:id="@+id/aiLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/aiTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:padding="7dp"
                android:text="App Guide"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/gImgOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selectedbuttonshape"
                android:src="@drawable/firstimage"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/gImgTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selectedbuttonshape"
                android:src="@drawable/imgtwo"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/gImgThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selectedbuttonshape"
                android:src="@drawable/imgthree"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>


            <Button
                android:id="@+id/aiReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="5dp"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:background="@drawable/selectedbuttonshape"
                android:text="Return"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>