<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:background="@color/gray"
        android:id="@+id/ciLayout"
        tools:context="com.kos.AACassistant.AppInfo">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/txtciTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Info"
                    android:textColor="@color/white"
                    android:textSize="40dp"
                    android:padding="7dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/txtDev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer Details"
                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/txtDevInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:text="Konstantinos Panteli \nKonstantinos-development@hotmail.com"/>
                <TextView
                    android:id="@+id/txtSup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supervisor Details"
                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/txtSupInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:text="Dr Peter O'Neil\np.o'neill@shu.ac.uk"/>
                <TextView
                    android:id="@+id/txtNHS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barnsley Assistive Technology Team Details"
                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/txtNHSInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:text="Becky Leedale\nrebeccaleedale@nhs.net\n\nGemma Sleman\ngemma.sleman@nhs.net"/>

                <Button
                    android:id="@+id/btnCIReturnToSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Return"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/selectedbuttonshape"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
