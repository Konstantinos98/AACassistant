<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:background="@color/gray"
    tools:context=".DatabaseControl"
    android:id="@+id/dcLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/txtDCTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Database Control"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:padding="7dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/txtDCInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:padding="5dp"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:text="* Click the 'Upload' button to back up your database into the device storage.\n* Click the 'Download' button to import a new database into the application."/>
            <Button
                android:id="@+id/btnUploadDatabase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/selectedbuttonshape"/>
            <Button
                android:id="@+id/btnDownloadDatabase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/selectedbuttonshape"/>
            <Button
                android:id="@+id/btnDCReturnToSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/selectedbuttonshape"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>